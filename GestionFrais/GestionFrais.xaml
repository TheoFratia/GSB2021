<Window x:Class="GSB.GestionFrais"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionFrais"
        mc:Ignorable="d"
        Title="GestionFrais" Height="625" Width="800">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="textBox" TextWrapping="Wrap" Grid.Row="0" Margin="10,23,0,0" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="110"/>
            <ComboBox x:Name="comboBox" ItemsSource="{Binding ListMois, Mode=OneWay}" SelectedItem="{Binding SelectedMois}" Margin="145,23,0,0" Grid.Row="0" IsEditable="True" IsReadOnly="True" Text="-- Select month --" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="144" Height="27" VerticalAlignment="Top" />
            <ListBox x:Name="dataGrid" ItemsSource="{Binding ListFicheFrais}" SelectedItem="{Binding SelectedFicheFrais}" Margin="10,10,10,13" Grid.Row="1" FontSize="14" SelectionChanged="dataGrid_SelectionChanged"/>
            <Button x:Name="button" Content="Valider la liste de frais" Margin="10,20,0,0" Grid.Row="2" HorizontalAlignment="Left" Width="147" Height="30" VerticalAlignment="Top" />
            <Button x:Name="button1" Content="Suivre le paiement" Command="{Binding EtatFiche}" Margin="10,10,0,0" Grid.Row="3" HorizontalAlignment="Left" Width="147" Height="29" VerticalAlignment="Top" Click="button1_Click"/>
            <ComboBox x:Name="comboBox1" Visibility="Hidden" ItemsSource="{Binding ListEtat}" SelectedItem="{Binding SelectedEtat}" IsEditable="True" IsReadOnly="True" Text="{Binding Suivi}" HorizontalAlignment="Left" Margin="195,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="168" Height="29"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="label" Content="Eléments forfaitisés" Margin="134,10,81,10" FontSize="15" FontWeight="Bold"/>
            <DataGrid x:Name="dataGrid1" SelectionMode="Single" AutoGenerateColumns="False" ItemsSource="{Binding ListLigneFraisForfait}" Margin="10,10,10,11" Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="idfraisforfait" Binding="{Binding IdFraitForfait}"></DataGridTextColumn>
                    <DataGridTextColumn Header="mois" Binding="{Binding Mois}"></DataGridTextColumn>
                    <DataGridTextColumn Header="qantite" Binding="{Binding Quantite}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Label x:Name="label1" Content="Eléments hors forfait" FontWeight="Bold" Margin="119,14,109,0" Grid.Row="2" VerticalAlignment="Top" FontSize="15"/>
            <Button x:Name="button2" Content="Reporter le frais au mois suivant" Margin="0,10,10,0" Grid.Row="4" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Width="181"/>
            <Button x:Name="button3" Content="Refuser la ligne de frais" Margin="248,12,0,0" Grid.Row="5" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="138"/>
            <Button x:Name="button4" Content="Envoyer un message" Margin="124,12,0,0" Grid.Row="5" RenderTransformOrigin="-0.427,-0.318" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="119"/>
            <Button x:Name="button5" Command="{Binding UpdateFicheFrais}"  Content="Modifier" Margin="37,12,0,0" Grid.Row="5" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="82"/>
            <DataGrid x:Name="dataGrid2" SelectionMode="Single" AutoGenerateColumns="False" ItemsSource="{Binding ListLigneFraisHorsForfait}" Margin="10,10,10,12" Grid.Row="3">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="mois" Binding="{Binding Mois}"></DataGridTextColumn>
                    <DataGridTextColumn Header="libelle" Binding="{Binding Libelle}"></DataGridTextColumn>
                    <DataGridTextColumn Header="date" Binding="{Binding Date}"></DataGridTextColumn>
                    <DataGridTextColumn Header="montant" Binding="{Binding Montant}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
